<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<!--Constructs the Current Order user interface-->
<!--@author Ishani Mhatre-->
<!--@author Keerthana Talla-->
<AnchorPane prefHeight="400.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxproject.CurrentOrderController">
    <children>
        <ListView fx:id="listView" layoutX="20.0" layoutY="100.0" prefHeight="200.0" prefWidth="486.0" />
        <Label layoutX="14.0" layoutY="62.0" text="Order Number:" />
        <TextField fx:id="orderNumber" layoutX="113.0" layoutY="58.0" />
        <Label layoutX="175.0" layoutY="14.0" text="Current Order">
            <font>
                <Font size="25.0" />
            </font>
        </Label>
        <Button fx:id="orderButton" layoutX="302.0" layoutY="347.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="89.0" text="Place Order" onAction="#placeOrder"/>
        <Button fx:id="RemovePizza" layoutX="416.0" layoutY="310.0" mnemonicParsing="false" text="Remove Pizza" onAction="#removePizza"/>
        <Button fx:id="ClearOrder" layoutX="416.0" layoutY="347.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="89.0" text="Clear Order" onAction="#clearOrder"/>
        <TextField fx:id="subtotal" layoutX="87.0" layoutY="309.0" prefHeight="26.0" prefWidth="81.0" />
        <Label layoutX="17.0" layoutY="313.0" prefHeight="18.0" prefWidth="70.0" text="subtotal: $" />
        <Label layoutX="17.0" layoutY="351.0" prefHeight="18.0" prefWidth="70.0" text="order total $" />
        <TextField fx:id="orderTotal" layoutX="87.0" layoutY="348.0" prefHeight="26.0" prefWidth="82.0" />
        <Label layoutX="188.0" layoutY="314.0" text="sales tax $" />
        <TextField fx:id="salesTax" layoutX="248.0" layoutY="309.0" prefHeight="26.0" prefWidth="89.0" />
    </children>
</AnchorPane>