<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<!--Constructs the Store Order user interface-->
<!--@author Ishani Mhatre-->
<!--@author Keerthana Talla-->
<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxproject.StoreOrdersController">
    <children>
        <ComboBox fx:id="comboBox" layoutX="104.0" layoutY="57.0" onAction="#showOrders" prefHeight="26.0" prefWidth="71.0" />
        <ListView fx:id="listView" layoutX="20.0" layoutY="100.0" prefHeight="200.0" prefWidth="486.0" />
        <Label layoutX="14.0" layoutY="62.0" text="Order Number:" />
        <Label layoutX="277.0" layoutY="62.0" text="Order Total: $" />
        <TextField fx:id="orderTotal" layoutX="356.0" layoutY="58.0"/>
        <Label layoutX="175.0" layoutY="14.0" text="Store Orders">
            <font>
                <Font size="25.0" />
            </font>
        </Label>
        <Button layoutX="61.0" layoutY="334.0" mnemonicParsing="false" text="Cancel Order" onAction="#cancelOrder"/>
        <Button layoutX="370.0" layoutY="334.0" mnemonicParsing="false" text="Export Store Orders" onAction="#exportOrders"/>
    </children>
</AnchorPane>